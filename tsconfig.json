{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "module": "ESNext",
    "target": "ES6",
    "moduleResolution": "Node10",
    "declaration": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": ["src", "test.js"],
  "exclude": ["node_modules"]
}
